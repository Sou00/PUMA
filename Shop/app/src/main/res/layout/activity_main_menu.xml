<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <Button
        android:id="@+id/productListButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="32dp"
        android:onClick="productListClicked"
        android:text="Product list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="32dp"
        android:onClick="logoutClicked"
        android:text="Logout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactButton"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="166dp"
        android:layout_height="132dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/btn_star_big_on"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/faqButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="32dp"
        android:text="FAQ"
        android:onClick="faqClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productListButton" />

    <Button
        android:id="@+id/contactButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="32dp"
        android:text="Contact"
        android:onClick="contactClicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/faqButton" />
</androidx.constraintlayout.widget.ConstraintLayout>